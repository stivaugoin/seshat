generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model Book {
    id            String   @id @default(cuid()) @map("_id")
    authors       String[]
    description   String?
    isbn          String   @unique
    pages         Int?
    publishedYear Int?
    rating        Int?
    readYear      Int?
    title         String

    createdAt DateTime @default(now())
}
